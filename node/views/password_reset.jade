extends layout

block content
    div(class="col-sm-offset-2 col-sm-8 ")
        div(class="panel panel-default")
            div(class="panel-heading" style="text-align:center")
                h1 Reset Password
            div(class="panel-body")
                form(role="form" class="form-horizontal" method="post" runat="server" id="frm")
                    div(class="form-group")
                        label(for="userName" class="control-label col-sm-2") Username:
                        div(class="col-sm-10")
                            input(type="name" class="form-control" placeholder="Enter Username" id="userName")
                    div(class="form-group")
                        label(for="email" class="control-label col-sm-2") Email:
                        div(class="col-sm-10")
                             input(type="email" class="form-control" placeholder="Enter Email Address" id="email")
                    div(class="form-group")
                        div(class="col-sm-offset-2 col-sm-4")
                            button(type="submit" class="btn btn-default") Submit




